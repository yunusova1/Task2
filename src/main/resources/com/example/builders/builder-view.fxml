<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.builders.Controller" style="-fx-background-color: #D3D3D3;"> <!-- Серый фон -->
    <Text fx:id="titleText" style="-fx-font-size: 24px;" text="Value indicator"/>
    <Pane fx:id="indicatorPane" prefHeight="200" prefWidth="400" style="-fx-border-color: black;"/>
    <TextField fx:id="startField" alignment="CENTER" prefHeight="25.0" prefWidth="313.0" promptText="Введите начало отрезка">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </TextField>
    <TextField fx:id="stopField" alignment="CENTER" promptText="Введите конец отрезка">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </TextField>
    <TextField fx:id="measureField" alignment="CENTER" promptText="Введите текущее значение">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </TextField>
    <Button fx:id="updateButton" onAction="#updateIndicator" text="Создать индикатор" style="-fx-background-color: #00BFFF; -fx-text-fill: white; -fx-padding: 10 20 10 20;"> <!-- Голубой цвет кнопки -->
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </Button>
</VBox>
